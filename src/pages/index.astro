---
import Layout from "../layouts/Layout.astro";
import { ArrowRight } from "@lucide/astro";

type Technology = "TS" | "GO";

type Project = {
  title: string;
  description: string;
  technologies: Technology[];
  href: string;
};

const projects: Project[] = [
  {
    title: "emyht",
    description: "realtime chat application",
    technologies: ["TS", "GO"],
    href: "https://emyht.com",
  },
  {
    title: "bpm",
    description: "simple bpm tapper",
    technologies: ["TS"],
    href: "https://bpm.s12k.de/",
  },
  {
    title: "roundest",
    description: "vote for the roundest pok√©mon",
    technologies: ["GO"],
    href: "https://roundest.s12k.de/",
  },
  {
    title: "acme store",
    description: "e-commerce store without client side javascript",
    technologies: ["TS"],
    href: "https://acme-store.s12k.de/",
  },
  {
    title: "chirp",
    description: "twitter clone",
    technologies: ["TS"],
    href: "https://chirp.s12k.de/",
  },
  {
    title: "tic tac toe",
    description: "realtime multiplayer online tic tac toe",
    technologies: ["TS"],
    href: "https://tictactoe.s12k.de/",
  },
];
---

<Layout>
  <main class="flex flex-col gap-12 p-8 md:gap-18 md:p-18">
    <a href="/" class="text-lg font-medium">simon schmeinck</a>
    <div class="flex flex-col items-center gap-6 md:gap-8 md:px-6">
      <h1 class="w-full text-4xl font-bold">personal projects</h1>
      <ul
        class="md:grid-cols-auto-fill-20 grid w-full grid-cols-1 gap-4 md:gap-8"
      >
        {
          projects.map((project) => (
            <li>
              <div class="flex flex-col gap-8 rounded-2xl bg-zinc-50 p-6 md:p-8">
                <div class="flex flex-col">
                  <span class="text-xl font-bold">{project.title}</span>
                  <span class="font-light">{project.description}</span>
                </div>
                <div class="flex w-full items-center justify-between">
                  <div class="flex w-fit items-center justify-center gap-2 rounded-lg bg-zinc-200 p-2">
                    {project.technologies.map((tech) => (
                      <div class="flex max-h-6 min-h-6 max-w-6 min-w-6 items-center justify-center rounded-md bg-black text-xs text-white">
                        {tech}
                      </div>
                    ))}
                  </div>
                  <a
                    href={project.href}
                    class="flex h-10 items-center justify-center gap-2 rounded-lg bg-black px-4 text-white"
                  >
                    <span>view</span>
                    <ArrowRight size={18} />
                  </a>
                </div>
              </div>
            </li>
          ))
        }
      </ul>
    </div>
  </main>
</Layout>
