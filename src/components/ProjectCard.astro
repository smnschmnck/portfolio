---
import { ArrowRight } from "@lucide/astro/icons/index";
import type { Project } from "../types/project";
import { technologies } from "../data/technologies";
import Icon from "./ui/Icon.astro";

interface Props {
  project: Project;
}

const { project } = Astro.props;
---

<div class="flex flex-col gap-8 rounded-2xl bg-zinc-50 p-6 md:p-8">
  <div class="flex flex-col">
    <span class="text-xl font-bold">{project.title}</span>
    <span class="font-light">{project.description}</span>
  </div>
  <div class="flex w-full items-center justify-between gap-8">
    <div
      class="flex w-fit flex-wrap items-center gap-2 rounded-lg bg-zinc-100 p-2"
    >
      {
        project.technologies.map((tech) => (
          <div class="flex max-h-6 min-h-6 max-w-6 min-w-6 items-center justify-center rounded-md bg-black text-xs text-white">
            <Icon
              icon={technologies[tech].icon}
              className="min-w-3 min-h-3 max-w-3 max-h-3"
            />
          </div>
        ))
      }
    </div>
    <a
      href={project.href}
      class="flex h-10 items-center justify-center gap-2 rounded-lg bg-black px-4 text-white transition hover:bg-zinc-700"
    >
      <span>view</span>
      <ArrowRight size={18} />
    </a>
  </div>
</div>
